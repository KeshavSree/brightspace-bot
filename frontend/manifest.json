{
  "manifest_version": 3,
  "name": "Brightspace Mini Agent",
  "version": "1.0",
  "description": "Control Brightspace with natural language",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["*://*.brightspace.com/*", "*://*.d2l.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.brightspace.com/*", "*://*.d2l.com/*"],
      "js": ["content.js"]
    }
  ]
}